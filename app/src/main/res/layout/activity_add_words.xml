<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".AddWordsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <EditText
            android:layout_height="50dp"
            android:layout_width="350dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:id="@+id/add_word_activity_editTextKitapIsmi"
            android:hint="Kelime ismi" />
        <EditText
            android:layout_height="50dp"
            android:layout_width="350dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:id="@+id/add_word_activity_editTextKitapYazari"
            android:hint="Kelime yazarı" />

        <EditText
            android:layout_height="50dp"
            android:layout_width="350dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:id="@+id/add_word_activity_editTextKitapOzeti"
            android:hint="Kelime özeti" />
        
        <Button
            android:id="@+id/button"
            android:layout_width="230dp"
            android:layout_marginTop="20dp"
            android:text="kaydet"
            android:onClick="wordSave"
            android:textStyle="bold"
            android:layout_height="50dp" />





</LinearLayout>

</RelativeLayout>